// ダイアログ
.smalltalk{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    background-color: rgba(0, 0, 0, 0.58);
    button{
        margin-left:5px;
    }
}
.smalltalk .page{
    border-radius: 5px;
    margin: 0;
    padding: 0;
    position: fixed;
    top: 50%;
    left: 50%;
    height: 200px;
    width: 500px;
    padding: 10px;
    margin: -100px -250px;
    background-color: #fff;
}
